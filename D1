#include <iostream> 
#include <string>
using namespace std;    // بدال ما اكتب بكل امر هل خؤا
int main() {
    
        short x= 2003          ,  y=163          ;     // الفاصله جدا مهمه عند تعريف اكثر من متغير    
        int h= 943535343       ,  i= 254023      ;       
        float o= 3.15          ,  p= 133.54      ;
        double t= 43234.4      ,  l= 254.523     ;
        char n= 'h'            ,  m= 'a'         ;
        bool q= true           ,  w= false       ;     // العباره الصحيحه تعبر عنها ب 1     و العباره الخاطئه ب 0
    
/*  escape sequence
    (  \n  )   السطر التالي     
    (  \t  )  اعطاء 8 مسافات 
    (  \a  )  صوت انذار عند تشغيل الكود  
     (  \b  ) حذف الحرف الي قبله
    (  \r  ) حذف السطؤ الي قبله كله 
    (  \"  haider sid  \"   )   "haider sid"     لوضع اشاره الاقتباس      
    ( cout ) = print     ( << ) = or             {  cout  << "  النص "  << ;   }  <--- الكود بدون اي مسافات 
 */
        cout
            << "\n first word of my name = " <<n  
            << "\n first word of english language = "<<m
            << "\n my barth day is : " <<x       
            << "\n my toal is : " <<y  
            << "\n larger number : "<<h  
            << "\n large number : "<<i  
            << "\n num (Z) small = " <<o  
            << "\n num (Z) large = " <<p 
            << "\n t = " <<t  
            << "\n l = " <<l  
            << "\n q = " <<q 
            << "\n w = " <<w
/* --->*/   ;   /*<--- */


/* 
لا يمكن كتابه المتغير بارقام و رموز غير 
            (  _  )  (  $  ) 
*/
        int g= (16 + x) + 2 * 12  ,   p1= 6 * 2 + 4;         
        cout
        << "\n g = "<<g 
        << "\n p = "<<p1             ;
/*
                operator precedence
        ()
        *              /            %               
        +              -           
        =
        في حاله تساوي الاولويات ف يتتم العمليات من اليسار 
*/

        cout << "\n Enter \n 1. Age \n 2. toall \n 3. born year";
        int d , b;    // كتابه القيم تكون عن طريق السبيس 
        int s ;       // كتابه القيم تكون عن طريق الانتر   لانه متغير جديد
        cin >> d >> b;    // ادخال القيم من خلالها    
        cin >> s;
        cout << "\n Your Age = "<<d <<"\n Your toall = " <<b ;
        cout << "\n Born in  = "<<s;


        int f = 5 ;
        float e = 10.5 ; 
        cout << "\n resolt = " << f + e ;     
/*
        لتحويل العدد الناتج اي اي متغير نقوب ب كاستنج 
.                     casting verbel
*/
        cout << "\n resolt without point = " << f + int ( e ) << endl ;  
         /*   (int) e  ,  int (e)  عادي اي فيربل نكدر نسويله كاستنج */

        int k = 12 ;
        cout << "\nfirst k = " << k <<endl ;
        
        {       int k = 1 ;     cout << "\nsecond k = " << k <<endl ;    } //local variable  -->    {  int  }    <-- 
    
        return 0 ;               
    }
